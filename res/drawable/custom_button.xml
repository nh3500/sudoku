<?xml version="1.0" encoding="utf-8"?>
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#ffaa11" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:startColor="#333333"
                android:endColor="#222222"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>